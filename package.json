{
  "name": "nft_tool",
  "version": "1.0.0",
  "author": "",
  "description": "An NFT issuance tool for Bitshares",
  "homepage": "./",
  "private": true,
  "main": "./public/electron.js",
  "scripts": {
    "start": "cross-env BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "dev": "concurrently -k \"BROWSER=none npm start\" \"npm:electron\"",
    "electron": "electron .",
    "electron:start": "concurrently -k \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electronmon .\"",
    "electron:package:mac": "yarn build && electron-builder -m -c.extraMetadata.main=build/electron.js",
    "electron:package:win": "yarn build && electron-builder -w -c.extraMetadata.main=build/electron.js",
    "electron:package:linux": "yarn build && electron-builder -l -c.extraMetadata.main=build/electron.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grctest/nft_tool.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/grctest/nft_tool/issues"
  },
  "build": {
    "appId": "com.electron.nft_tool",
    "productName": "NFT Tool",
    "files": [
      "build/**/*",
      "./src/index.html",
      "./src/*.js",
      "./public/electron.js",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": "deb"
    }
  },
  "dependencies": {
    "@mantine/core": "^4.2.11",
    "@mantine/dropzone": "^4.2.11",
    "@mantine/form": "^4.2.11",
    "@mantine/hooks": "^4.2.11",
    "bitsharesjs-ws": "^6.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "use-local-storage-state": "^18.1.0",
    "beet-js": "0.14.0"
  },
  "devDependencies": {
    "electron-builder": "^23.1.0",
    "wait-on": "^6.0.1",
    "cross-env": "^7.0.3",
    "electron": "^19.0.7",
    "concurrently": "^7.2.2",
    "electronmon": "^2.0.2"
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  }
}
